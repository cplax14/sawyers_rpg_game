{
  "name": "sawyers-rpg-game",
  "version": "1.0.0",
  "private": true,
  "description": "Sawyer's RPG Game - React port with headless testing",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:react": "vite --config vite.react.config.ts",
    "build": "tsc -b && vite build",
    "build:react": "tsc -b && vite build --config vite.react.config.ts",
    "preview": "vite preview",
    "preview:react": "vite preview --config vite.react.config.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:headless": "node scripts/headless-test.js",
    "test:react": "node scripts/headless-test-react.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "firebase": "^12.3.0",
    "framer-motion": "^12.23.19",
    "lz-string": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.6.2",
    "puppeteer": "^22.7.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
